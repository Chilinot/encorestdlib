import HashMap
import HashCode
import Wrappers

passive class Foo : HashCode {
    hash_code : uint
    def init() : void {
        this.hash_code = this.hash_adress();
    }
}

def set_and_get() : bool {
    let
        map = new HashMap<int>
        foo = new Foo()
    in {
        map.set(foo, 12);
        match map.get_value(foo) with
            Just 12 => true
            _       => false
    }
}
