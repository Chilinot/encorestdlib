trait Hasher
    require hash(id : uint) : uint

    {-
        Performs value % mod
    -}
    def modulo(value : uint, mod : uint) : uint {
        embed uint
            uint64_t value = (uint64_t) #{value};
            uint64_t mod   = (uint64_t) #{mod};
            (value % mod);
        end
    }
