def push_three_and_remove_middle() : bool {
    let
        list = new LinkedList<int>
        middle = null : LinkedNode<int>
        success = true
    in {
        list.push(42);
        list.push(1337);
        list.push(420);

        -- Retrieve the middle node.
        (match list.top with
            Just first => (
                match first.next with
                    Just second => middle = second
                    _ => success = false
            )
            _ => success = false
        );

        -- Remove the middle node.
        if middle != null then {
            list.drop(middle);
        };

        -- Ensure that it is no longer there
        -- and that the correct node was removed.
        success = success and (
            match list.top with
                Just first => (
                    (match first.next with
                        Just second => (
                            (match second.next with
                                Nothing => true
                                _       => false) and
                            second.value == 42
                        )
                        _ => false) and
                    first.value == 420
                )
                _ => false
        );

        -- Return
        success
    }
}
