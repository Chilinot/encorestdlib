import Linked_List

def create() : bool {
    let
        list = new LinkedList<int>
    in {
        list.top == Nothing and list.length == 0
    }
}
def push_one() : bool {
    let
        list = new LinkedList<int>
    in {
        list.push(22);
        match list.top with
            Just node => node.value == 22 and
                         node.next  == Nothing and
                         node.prev  == Nothing

            _         => false
    }
}
def push_two() : bool {
    let
        list = new LinkedList<int>
    in {
        list.push(22);
        list.push(12);

        match list.top with
            Just first =>
                (match first.next with
                    Just second =>
                        (
                         first.value  == 12 and
                         second.value == 22 and
                        (match second.prev with
                            Just node => node == first
                            _ => false) and
                        (match first.next with
                            Just node => node == second
                            _ => false)
                        )
                    _ => false)
            _ => false
    }
}
